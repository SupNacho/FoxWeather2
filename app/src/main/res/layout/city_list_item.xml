<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/city_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_standart_LR"
        android:layout_marginTop="@dimen/margin_standart_LR"
        android:layout_marginRight="@dimen/margin_standart_LR"
        android:textSize="@dimen/city_list_text_size"
        tools:text="Cloudy"/>
    <TextView
        android:id="@+id/text_view_day_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_standart_LR"
        android:layout_marginTop="@dimen/margin_standart_LR"
        android:layout_marginRight="@dimen/margin_standart_LR"
        android:text="temp: +5C"/>

</LinearLayout>