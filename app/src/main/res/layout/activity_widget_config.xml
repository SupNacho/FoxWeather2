<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_standart_LR"
    tools:context="fw.supernacho.ru.foxweather.widget.WidgetConfigActivity">

    <TextView
        android:id="@+id/text_view_city_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_city_label"
        tools:text="Enter city for displayin widget:"/>

    <EditText
        android:id="@+id/edit_text_widget_city"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button_apply_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_apply_setting_text"
        android:onClick="onClickButton"/>
</LinearLayout>
